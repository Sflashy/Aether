<UserControl
    x:Class="Aether.Controls.WorkspaceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Aether.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:viewmodels="clr-namespace:Aether.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:WorkspaceViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <materialDesign:Card
        materialDesign:ElevationAssist.Elevation="Dp5"
        Background="{DynamicResource CustomDarkBackgroundColor}"
        UniformCornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <svgc:SvgViewbox
                    Width="20"
                    Height="20"
                    Source="/Resources/Icons/folder.svg" />
                <TextBlock
                    Margin="5,5,0,5"
                    Style="{StaticResource CustomMenuTitleText}"
                    Text="Workspace" />
            </StackPanel>
            <Grid Grid.Row="1" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource CustomButtonBackgroundColor}"
                    CornerRadius="5,0,0,5">
                    <TextBox
                        Padding="10"
                        HorizontalAlignment="Stretch"
                        materialDesign:HintAssist.Hint="/games/com.example.game/"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource CustomPrimaryTextColor}"
                        Text="{Binding SelectedWorkspace}" />
                </Border>
                <Button
                    Grid.Column="1"
                    Width="40"
                    Height="38"
                    Padding="0"
                    materialDesign:ButtonAssist.CornerRadius="0,5,5,0"
                    Background="{DynamicResource CustomButtonBackgroundColor}"
                    Command="{Binding WorkspaceSelectionDialogCommand}"
                    Style="{StaticResource CustomButton}">
                    <Button.Content>
                        <materialDesign:PackIcon
                            Width="20"
                            Height="20"
                            Kind="FileSearch" />
                    </Button.Content>
                </Button>
            </Grid>

            <Grid Grid.Row="3" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Manifest Name  -->
                <Border
                    Grid.Column="0"
                    Margin="0,5,0,0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource CustomDarkBackgroundColor}"
                    BorderBrush="{DynamicResource CustomBorderColor}"
                    BorderThickness="1"
                    CornerRadius="15">
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            Foreground="{DynamicResource CustomSecondaryTextColor}"
                            Kind="GamepadCircle" />
                        <TextBlock
                            Margin="3,0,0,0"
                            Cursor="Hand"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="{DynamicResource CustomSecondaryTextColor}">
                            <Run Text="Name:" />
                            <Run MouseLeftButtonDown="CopyEvent" Text="{Binding Manifest.Name, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--  Manifest Package Name  -->
                <Border
                    Grid.Column="1"
                    Margin="10,5,0,0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    BorderBrush="{DynamicResource CustomBorderColor}"
                    BorderThickness="1"
                    CornerRadius="15">
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            Foreground="{DynamicResource CustomSecondaryTextColor}"
                            Kind="FileCode" />
                        <TextBlock
                            Margin="3,0,0,0"
                            Cursor="Hand"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="{DynamicResource CustomSecondaryTextColor}">
                            <Run Text="Package:" />
                            <Run MouseLeftButtonDown="CopyEvent" Text="{Binding Manifest.PackageName, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--  Manifest Version  -->
                <Border
                    Grid.Column="2"
                    Margin="10,5,0,0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    BorderBrush="{DynamicResource CustomBorderColor}"
                    BorderThickness="1"
                    CornerRadius="15">
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            Foreground="{DynamicResource CustomSecondaryTextColor}"
                            Kind="Tag" />
                        <TextBlock
                            Margin="3,0,0,0"
                            Cursor="Hand"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="{DynamicResource CustomSecondaryTextColor}">
                            <Run Text="Version:" />
                            <Run MouseLeftButtonDown="CopyEvent" Text="{Binding Manifest.VersionName, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--  Manifest Min SDK Version  -->
                <Border
                    Grid.Column="3"
                    Margin="10,5,0,0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    BorderBrush="{DynamicResource CustomBorderColor}"
                    BorderThickness="1"
                    CornerRadius="15">
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            Foreground="{DynamicResource CustomSecondaryTextColor}"
                            Kind="Cpu32Bit" />
                        <TextBlock
                            Margin="3,0,0,0"
                            Cursor="Hand"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="{DynamicResource CustomSecondaryTextColor}">
                            <Run Text="Min SDK:" />
                            <Run MouseLeftButtonDown="CopyEvent" Text="{Binding Manifest.MinSDKVersion, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!--  Manifest Architecture  -->
                <Border
                    Grid.Column="4"
                    Margin="10,5,0,0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    BorderBrush="{DynamicResource CustomBorderColor}"
                    BorderThickness="1"
                    CornerRadius="15">
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="14"
                            Height="14"
                            Foreground="{DynamicResource CustomSecondaryTextColor}"
                            Kind="CodeBraces" />
                        <TextBlock
                            Margin="3,0,0,0"
                            Cursor="Hand"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="{DynamicResource CustomSecondaryTextColor}">
                            <Run Text="Architecture:" />
                            <Run MouseLeftButtonDown="CopyEvent" Text="{Binding Manifest.Architecture, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </materialDesign:Card>
</UserControl>
