<UserControl
    x:Class="APKTool.Controls.FridaScript"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:APKTool.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <materialDesign:Card
        materialDesign:ElevationAssist.Elevation="Dp5"
        Background="{DynamicResource CustomDarkBackgroundColor}"
        UniformCornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                FontSize="15"
                FontWeight="Medium"
                Foreground="{DynamicResource CustomPrimaryTextColor}"
                Text="Frida Script" />
            <StackPanel
                Grid.Row="1"
                Margin="0,15,0,0"
                Orientation="Horizontal">
                <Border
                    BorderBrush="{DynamicResource CustomBorderColor}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <TextBox
                        Width="152"
                        Padding="10"
                        BorderThickness="0"
                        FontWeight="Medium"
                        Foreground="{DynamicResource CustomPrimaryTextColor}"
                        Text="scripts/bypas_root.js" />
                </Border>
                <Button
                    Margin="5,0,0,0"
                    materialDesign:ButtonAssist.CornerRadius="5"
                    Background="{DynamicResource CustomButtonBackgroundColor}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <Button.Content>
                        <svgc:SvgViewbox
                            Width="15"
                            Height="15"
                            Source="/Resources/Icons/Attachment.svg" />
                    </Button.Content>
                </Button>
            </StackPanel>
            <Button
                Grid.Row="2"
                Height="38"
                Margin="0,15,0,0"
                materialDesign:ButtonAssist.CornerRadius="5"
                BorderBrush="{DynamicResource CustomBorderColor}"
                BorderThickness="1"
                Style="{StaticResource MaterialDesignFlatButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <svgc:SvgViewbox
                            Width="15"
                            Height="15"
                            Margin="0,0,5,0"
                            Source="/Resources/Icons/new_script.svg" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="{DynamicResource CustomPrimaryTextColor}"
                            Text="New Script" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
    </materialDesign:Card>
</UserControl>
