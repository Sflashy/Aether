<UserControl
    x:Class="APKTool.Controls.FridaGadget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:APKTool.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:APKTool.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <materialDesign:Card
        materialDesign:ElevationAssist.Elevation="Dp5"
        Background="{DynamicResource CustomDarkBackgroundColor}"
        UniformCornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Style="{StaticResource CustomMenuTitleText}"
                Text="Frida Gadget" />
            <ProgressBar
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                IsIndeterminate="True"
                Opacity="{Binding IsDownloading}"
                Style="{StaticResource MaterialDesignCircularProgressBar}" />

            <StackPanel Grid.Row="1" Margin="0,15,0,0">
                <TextBlock Style="{StaticResource CustomMenuSecondaryTitleText}" Text="Version" />
                <ComboBox
                    Height="35"
                    Margin="0,10,0,0"
                    Padding="10"
                    Background="{DynamicResource CustomButtonBackgroundColor}"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium"
                    Foreground="{DynamicResource CustomPrimaryTextColor}"
                    ItemsSource="{Binding AvailableFridaVersions}"
                    SelectedItem="{Binding SelectedFridaVersion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}" TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="{DynamicResource CustomButtonBackgroundColor}" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="models:Frida">
                            <TextBlock Foreground="{Binding IsInstalled, Mode=OneWay, Converter={StaticResource FridaAvailabilityToColorConverter}}" Text="{Binding Version}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <TextBlock Style="{StaticResource CustomMenuSecondaryTitleText}" Text="Architecture" />
                <ComboBox
                    Height="35"
                    Margin="0,10,0,0"
                    Padding="10"
                    Background="{DynamicResource CustomButtonBackgroundColor}"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="Medium"
                    Foreground="{Binding SelectedFridaVersion.IsInstalled, Converter={StaticResource FridaAvailabilityToColorConverter}}"
                    ItemsSource="{Binding SelectedFridaVersion.Architectures}"
                    SelectedItem="{Binding SelectedFridaVersion.Architecture, Mode=TwoWay}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}" TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="{DynamicResource CustomButtonBackgroundColor}" />
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="string">
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,20,0,0">
                <Button
                    Height="40"
                    materialDesign:ButtonAssist.CornerRadius="5"
                    Background="{DynamicResource CustomButtonBackgroundColor}"
                    Command="{Binding DownloadFridaCommand}"
                    CommandParameter="{Binding SelectedFridaVersion}"
                    Style="{StaticResource CustomButton}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="18"
                                Height="18"
                                Margin="0,0,4,0"
                                Kind="Download" />
                            <TextBlock
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="{DynamicResource CustomPrimaryTextColor}"
                                Text="Download Gadget" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
            <TextBlock
                Grid.Row="4"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Style="{StaticResource CustomMenuSecondaryTitleText}"
                Text="Gadget Size: ~4.2 MB" />
        </Grid>
    </materialDesign:Card>
</UserControl>
