<UserControl
    x:Class="APKTool.Controls.RecentActivity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:APKTool.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <materialDesign:Card
        materialDesign:ElevationAssist.Elevation="Dp5"
        Background="{DynamicResource CustomDarkBackgroundColor}"
        UniformCornerRadius="10">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <svgc:SvgViewbox
                    Width="20"
                    Height="20"
                    Source="/Resources/Icons/activity.svg" />
                <TextBlock
                    Margin="5,5,0,5"
                    FontSize="15"
                    FontWeight="Medium"
                    Foreground="{DynamicResource CustomPrimaryTextColor}"
                    Text="Recent Activity" />
            </StackPanel>
            <Border
                Grid.Row="1"
                Margin="0,10,0,0"
                Background="{DynamicResource CustomDarkerBackgroundColor}"
                CornerRadius="5">
                <ListView
                    Height="150"
                    HorizontalContentAlignment="Stretch"
                    ItemsSource="{Binding Activities}"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="models:Activity">
                            <Border>
                                <Grid HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Grid.Column="0"
                                        Padding="10"
                                        Background="{Binding Background}"
                                        CornerRadius="5">
                                        <svgc:SvgViewbox Source="{Binding Icon}" />
                                    </Border>
                                    <Grid Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock
                                            VerticalAlignment="Top"
                                            FontSize="15"
                                            FontWeight="Medium"
                                            Foreground="{StaticResource CustomPrimaryTextColor}"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            Foreground="{DynamicResource CustomSecondaryTextColor}"
                                            Text="{Binding Description}" />
                                    </Grid>
                                    <Grid Grid.Column="2" VerticalAlignment="Top">
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            FontWeight="Medium"
                                            Foreground="{DynamicResource CustomSecondaryTextColor}"
                                            Text="{Binding Time}" />
                                    </Grid>
                                </Grid>
                            </Border>

                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Border>

        </Grid>
    </materialDesign:Card>
</UserControl>
