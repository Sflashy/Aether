<UserControl
    x:Class="APKTool.Controls.TitleBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:APKTool.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <materialDesign:Card
        Height="30"
        VerticalContentAlignment="Center"
        materialDesign:ElevationAssist.Elevation="Dp5"
        Background="{DynamicResource CustomDarkBackgroundColor}"
        UniformCornerRadius="0">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction
                    Command="{Binding DragWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    PassEventArgsToCommand="True" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <svgc:SvgViewbox
                    Height="15"
                    Margin="10,0,0,0"
                    Source="/Resources/Icons/icon.svg" />
                <TextBlock
                    Grid.Column="1"
                    Margin="8,1,0,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="Medium"
                    Foreground="{DynamicResource CustomPrimaryTextColor}"
                    Text="Frida APK Injector" />
            </Grid>

            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Width="30"
                    Height="30"
                    Padding="0"
                    Command="{Binding MinimizeWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon Kind="WindowMinimize" />
                </Button>

                <Button
                    Width="30"
                    Height="30"
                    Padding="0"
                    IsEnabled="False"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon Kind="WindowMaximize" />
                </Button>

                <Button
                    Name="ButtonClose"
                    Width="30"
                    Height="30"
                    Padding="0"
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                    <materialDesign:PackIcon Kind="Close" />
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>

</UserControl>
