<Window
    x:Class="APKTool.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:APKTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:APKTool"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:viewmodels="clr-namespace:APKTool.ViewModels"
    Title="MainWindow"
    Width="1280"
    Height="965"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    Background="{DynamicResource CustomDarkerBackgroundColor}"
    FontFamily="{StaticResource Urbanist}"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <controls:TitleBar Grid.Row="0" Grid.ColumnSpan="2" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:Console Grid.Row="0" Margin="20,20,20,0" />
            <controls:APKSelection Grid.Row="1" Margin="20,20,20,0" />
            <controls:RecentActivity Grid.Row="2" Margin="20,20,20,20" />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:DeviceSelection Grid.Row="0" Margin="0,20,20,0" />
            <controls:FridaGadget Grid.Row="1" Margin="0,20,20,0" />
            <materialDesign:Card
                Grid.Row="2"
                Margin="0,20,20,0"
                Background="{DynamicResource CustomDarkBackgroundColor}"
                UniformCornerRadius="10">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        FontSize="15"
                        FontWeight="Medium"
                        Foreground="{DynamicResource CustomPrimaryTextColor}"
                        Text="Advanced Options" />
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <RadioButton
                            Content="Debug Mode"
                            FontWeight="Medium"
                            Foreground="{DynamicResource CustomSecondaryTextColor}" />
                        <RadioButton
                            Margin="0,10,0,0"
                            Content="Persistent Injection"
                            FontWeight="Medium"
                            Foreground="{DynamicResource CustomSecondaryTextColor}"
                            Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}" />
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
            <materialDesign:Card
                Grid.Row="3"
                Margin="0,20,20,0"
                Background="{DynamicResource CustomDarkBackgroundColor}"
                UniformCornerRadius="10">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        FontSize="15"
                        FontWeight="Medium"
                        Foreground="{DynamicResource CustomPrimaryTextColor}"
                        Text="Frida Script" />
                    <Grid Grid.Row="1" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Background="{DynamicResource CustomButtonBackgroundColor}"
                            CornerRadius="5,0,0,5">
                            <TextBox
                                Padding="10"
                                HorizontalAlignment="Stretch"
                                materialDesign:HintAssist.Hint="script.js"
                                BorderThickness="0"
                                FontWeight="Medium"
                                Foreground="{DynamicResource CustomPrimaryTextColor}" />
                        </Border>
                        <Button
                            Grid.Column="1"
                            Width="40"
                            Height="38"
                            Padding="0"
                            materialDesign:ButtonAssist.CornerRadius="0,5,5,0"
                            Background="{DynamicResource CustomButtonBackgroundColor}"
                            Command="{Binding BrowseFolderCommand}"
                            Style="{StaticResource CustomButton}">
                            <Button.Content>
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Kind="FileSearch" />
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>

            </materialDesign:Card>
            <controls:InjectionButton
                Grid.Row="4"
                Margin="0,20,20,20"
                VerticalAlignment="Bottom" />
        </Grid>
        <controls:FooterBar Grid.Row="2" Grid.ColumnSpan="2" />
    </Grid>

</Window>
